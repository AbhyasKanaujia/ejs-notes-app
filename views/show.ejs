<%- include('partials/header', { title: note.title }) %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">

      <!-- Title -->
      <div class="mb-3">
        <h1 class="fw-semibold"><%= note.title %></h1>
      </div>

      <!-- Tags -->
      <% if (note.tags.length > 0) { %>
        <div class="mb-4">
          <% note.tags.forEach(tag => { %>
            <span class="badge bg-light text-dark border me-1 px-3 py-2">
              <%= tag %>
            </span>
          <% }) %>
        </div>
      <% } %>

      <!-- Actions -->
      <div class="d-flex gap-3 mb-4 small">
        <a href="/<%= note.id %>/edit" class="text-decoration-none text-black">
          <i class="bi bi-pencil me-1"></i> Edit
        </a>

        <a href="/<%= note.id %>/delete"
           onclick="return confirm('Are you sure you want to delete this note?');"
           class="text-danger text-decoration-none">
          <i class="bi bi-trash me-1"></i> Delete
        </a>
      </div>

      <hr class="my-4">

      <!-- Content -->
      <div class="fs-5 lh-lg">
        <%- note.content %>
      </div>

    </div>
  </div>
</div>

<%- include('partials/footer') %>
