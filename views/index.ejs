<%- include('partials/header', { title: 'EJS Notes App' }) %>

<div class="container">
  <h2 class="text-center mb-4">My Notes</h2>
  <% if (notes.length === 0) { %>
    <div class="text-center py-5">
      <p class="text-muted mb-3">No notes found.</p>
      <a href="/new" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i> Create your first note
      </a>
    </div>
  <% } else { %>
    <div class="row g-4">
      <% notes.forEach(note => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card shadow-sm h-100 position-relative">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title mb-2">
                <a href="/<%= note.id %>" class="text-decoration-none text-dark">
                  <%= note.title %>
                </a>
              </h5>

              <p class="card-text text-muted flex-grow-1">
                <%= note.content.substring(0, 100) %>...
              </p>

              <% if (note.tags.length > 0) { %>
                <div class="mb-3">
                  <% note.tags.forEach(tag => { %>
                    <span class="badge bg-light text-dark border me-1">
                      <%= tag %>
                    </span>
                  <% }) %>
                </div>
              <% } %>

              <!-- Actions -->
              <div class="d-flex justify-content-between mt-auto">
                <a href="/<%= note.id %>" class="btn btn-sm">
                  <i class="bi bi-eye"></i> View
                </a>

                <a href="/<%= note.id %>/edit" class="btn btn-sm">
                  <i class="bi bi-pencil"></i> Edit
                </a>

                <a href="/<%= note.id %>/toggle-pin" class="btn btn-sm">
                  <i class="bi bi-pin<%= note.isPinned ? '-fill' : '' %>"></i><%= note.isPinned ? ' Unpin' : ' Pin' %>
                </a>

                <a href="/<%= note.id %>/delete"
                   onclick="return confirm('Are you sure you want to delete this note?');"
                   class="btn btn-sm text-danger">
                  <i class="bi bi-trash"></i> Delete
                </a>
              </div>

            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>
