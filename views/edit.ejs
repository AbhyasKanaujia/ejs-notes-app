<%- include('partials/header', {title: 'EJS Notes App'}) %>

<div>
  <div>
    <h2>Edit <%= note.title %></h2>

    <form action="/<%= note.id %>/edit" method="POST">
      <div>
        <label for="title">Title</label>
        <input 
          type="text" 
          id="title" 
          name="title" 
          value="<%= note.title %>"
          placeholder="Enter note title"
        />
      </div>

      <div>
        <label for="content">Content</label>
        <textarea 
          id="content" 
          name="content" 
          rows="10"
          placeholder="Enter your note content here..."
        ><%= note.content %></textarea>
      </div>

      <div>
        <label for="tags">Tags</label>
        <input 
          type="text" 
          id="tags" 
          name="tags" 
          value="<%= note.tags.join(', ') %>"
          placeholder="e.g., work, important, todo"
        />
      </div>

      <div>
        <label for="isPinned">
          <input type="checkbox" id="isPinned" name="isPinned"  <% if (note.isPinned) { %>checked<% } %>
          />
          
          Pin this note
        </label>
      </div>

      <div>
        <button type="submit">Update</button>
        <a href="/notes">Cancel</a>
      </div>
    </form>
  </div>
</div>
<%- include('partials/footer') %>