<%- include('partials/header', { title: 'Create New Note' }) %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card-body">

        <h3 class="mb-4 text-center">Create a New Note</h3>

        <form action="/" method="POST">

          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input 
              type="text"
              id="title"
              name="title"
              class="form-control"
              placeholder="Enter note title"
              required
            />
          </div>

          <!-- Content -->
          <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea
              id="content"
              name="content"
              rows="8"
              class="form-control"
              placeholder="Enter your note content here..."
              required
            ></textarea>
          </div>

          <!-- Tags -->
          <div class="mb-3">
            <label for="tags" class="form-label">Tags</label>
            <input 
              type="text"
              id="tags"
              name="tags"
              class="form-control"
              placeholder="e.g. work, important, todo"
            />
            <div class="form-text">
              Separate tags with commas.
            </div>
          </div>

          <!-- Pin Checkbox -->
          <div class="form-check mb-4">
            <input 
              type="checkbox"
              id="isPinned"
              name="isPinned"
              class="form-check-input"
            />
            <label for="isPinned" class="form-check-label">
              Pin this note
            </label>
          </div>

          <!-- Buttons -->
          <div class="d-flex justify-content-between">
            <a href="/notes" class="btn btn-outline-secondary">
              Cancel
            </a>

            <button type="submit" class="btn btn-primary">
              Create Note
            </button>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
